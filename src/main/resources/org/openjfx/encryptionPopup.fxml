<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.PopupHelper">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Encryption Mode" />
              </menus>
            </MenuBar>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="btnReturnToEncryption" mnemonicParsing="false" onAction="#swtichToEncryption" text="Back to Encryption" />
                  <Region minWidth="0.0" prefHeight="25.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </VBox.margin>
            </HBox>
            <HBox layoutX="10.0" layoutY="77.0" spacing="10.0">
               <children>
                  <Label text="AES Encryption Key">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Region prefHeight="29.0" prefWidth="27.0">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Region>
                  <TextField fx:id="aesEncryptionKey" prefHeight="25.0" prefWidth="327.0" promptText="AES Encryption Key">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Region minWidth="0.0" prefHeight="25.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets left="8.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox layoutX="10.0" layoutY="105.0" spacing="10.0">
               <children>
                  <Label text="Encrypted IV + Message">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Region minWidth="0.0" prefHeight="25.0" prefWidth="0.0" />
                  <TextArea fx:id="aesEncryptionText" prefHeight="180.0" prefWidth="580.0" promptText="Encryption Message" />
                  <Region minWidth="0.0" prefHeight="25.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets left="8.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets left="5.0" />
         </padding>
         <children>
            <Label text="By Ryan Llewellyn, Copyright 2020" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
